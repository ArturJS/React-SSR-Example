{
  "name": "react-ssr-miniq",
  "description": "Example of an isomorphic (universal) webapp using react and hot reloading",
  "author": "Artur Nizamutdinov <nizamutdin.art@gmail.com> (http://github.com/ArturJS)",
  "license": "MIT",
  "version": "0.9.0",
  "repository": {
    "type": "git",
    "url": "http://node-js-sample.herokuapp.com/node.svg"
  },
  "homepage": "https://github.com/ArturJS/React-SSR-MiniQ",
  "keywords": [
    "react",
    "isomorphic",
    "universal",
    "webpack",
    "express",
    "hot reloading",
    "react-hot-reloader",
    "starter",
    "boilerplate",
    "babel"
  ],
  "main": "bin/server.js",
  "scripts": {
    "start": "concurrent --kill-others \"npm run start-prod\" \"npm run start-prod-api\"",
    "start-prod": "better-npm-run start-prod",
    "start-prod-api": "better-npm-run start-prod-api",
    "build": "npm run generate-preboot-file && better-npm-run build",
    "static-build": "npm run build && node ./bin/static-export.js",
    "generate-preboot-file": "node ./bin/generate-preboot-file.js",
    "postinstall": "npm run build",
    "lint": "eslint -c .eslintrc src api",
    "start-dev": "npm run generate-preboot-file && better-npm-run start-dev",
    "start-dev-api": "better-npm-run start-dev-api",
    "watch-client": "better-npm-run watch-client",
    "dev": "concurrent --kill-others \"npm run watch-client\" \"npm run start-dev\" \"npm run start-dev-api\"",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage",
    "test-node": "./node_modules/mocha/bin/mocha $(find api -name '*-test.js') --compilers js:babel-core/register",
    "test-node-watch": "./node_modules/mocha/bin/mocha $(find api -name '*-test.js') --compilers js:babel-core/register --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*index.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(jsx?)$",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080,
        "APIPORT": 3030
      }
    },
    "start-prod-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "production",
        "APIPORT": 3030
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "APIPORT": 3030
      }
    },
    "start-dev-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "development",
        "APIPORT": 3030
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000,
        "APIPORT": 3030
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "axios": "0.16.2",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-dynamic-import-node": "1.0.2",
    "babel-plugin-import-inspector": "2.0.0",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.3.13",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "body-parser": "^1.14.1",
    "classnames": "2.2.5",
    "compression": "^1.6.0",
    "d3": "4.10.0",
    "express": "^4.13.3",
    "file-loader": "^0.8.5",
    "history": "4.6.1",
    "hoist-non-react-statics": "^1.0.3",
    "http-proxy": "^1.12.0",
    "invariant": "^2.2.0",
    "jsdom": "11.0.0",
    "lodash": "4.17.4",
    "piping": "1.0.0-rc.4",
    "preboot": "4.5.2",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-helmet": "5.1.3",
    "react-hot-loader": "3.1.1",
    "react-loadable": "5.3.1",
    "react-router": "4.1.1",
    "react-router-config": "1.0.0-beta.3",
    "react-router-dom": "4.1.1",
    "react-router-server": "4.2.1",
    "scroll-behavior": "^0.3.2",
    "serialize-javascript": "^1.1.2",
    "serve-favicon": "^2.3.0",
    "shortid": "2.2.8",
    "url-loader": "^0.5.7",
    "warning": "^2.1.0",
    "webpack-isomorphic-tools": "^2.2.18"
  },
  "devDependencies": {
    "autoprefixer": "7.1.1",
    "babel-eslint": "7.2.2",
    "babel-plugin-lodash": "3.2.11",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-typecheck": "^3.6.0",
    "better-npm-run": "0.0.8",
    "chalk": "2.1.0",
    "clean-webpack-plugin": "^0.1.6",
    "concurrently": "^0.1.1",
    "css-loader": "^0.23.1",
    "enzyme": "2.9.1",
    "eslint": "4.4.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-import": "^0.8.0",
    "eslint-plugin-react": "4.0.0",
    "extract-text-webpack-plugin": "2.1.0",
    "jest": "20.0.4",
    "karma": "^0.13.10",
    "karma-cli": "^0.1.1",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.3",
    "node-sass": "4.5.3",
    "phantomjs": "^1.9.18",
    "phantomjs-polyfill": "0.0.1",
    "postcss-easy-import": "2.0.0",
    "postcss-loader": "2.0.5",
    "postcss-scss": "1.0.0",
    "prop-types": "15.5.10",
    "react-addons-test-utils": "0.14.8",
    "react-test-renderer": "15.6.1",
    "react-transform-catch-errors": "^1.0.0",
    "redbox-react": "1.4.3",
    "sass-loader": "^3.1.2",
    "shelljs": "0.7.8",
    "sinon": "^1.17.2",
    "string-replace-loader": "1.2.0",
    "strip-loader": "^0.1.0",
    "style-loader": "^0.13.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "webpack": "2.6.1",
    "webpack-bundle-analyzer": "2.9.0",
    "webpack-chunk-hash": "0.4.0",
    "webpack-dev-middleware": "1.10.2",
    "webpack-hot-middleware": "^2.5.0"
  },
  "engines": {
    "node": "7.5.0"
  }
}
